{
  "name": "forever-z-demos",
  "type": "module",
  "version": "0.0.0",
  "workspaces": ["src/views/*"],
  "scripts": {
    "prepare": "husky",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "build-readme": "tsx --tsconfig ./tsconfig.node.json scripts/build-readme.ts",
    "type-check": "vue-tsc",
