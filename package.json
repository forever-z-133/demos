  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "lodash-es": "^4.17.21",
    "pinia": "^2.3.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.1.1",
    "@tsconfig/node22": "^22.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.7",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.19.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "less": "^4.2.2",
    "npm-run-all2": "^7.0.2",
    "tsx": "^4.19.2",
    "typescript": "~5.7.3",
    "vite": "^6.0.11",
    "vite-plugin-vue-devtools": "^7.7.0",
    "vue-tsc": "^2.2.0"
  }
